<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agregarOrdenS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bs"
        android:gravity="center"
        android:text="Orden de Servicio"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- O seleccionar cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccione cliente:"
                style="@style/Texto1"
                />

            <Spinner
                android:id="@+id/spCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="12dp" />

            <!-- O seleccionar cliente -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Seleccione tecnico:" />

            <Spinner
                android:id="@+id/spTecnico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

            <!-- Fecha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Fecha:" />

            <EditText
                android:id="@+id/etFechaOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="dd/mm/yyyy"
                style="@style/Texto2"
                android:maxLength="10"
                android:inputType="text" />

            <!-- Placa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Placa:" />

            <EditText
                android:id="@+id/etPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Ej. ABC-123"
                style="@style/Texto2"
                android:inputType="textCapCharacters"
                android:maxLength="8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Tipo de vehículo:"
                />
            <Spinner
                android:id="@+id/spTipoVehiculo"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                style="@style/Texto2"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Servicio + Cantidad + Agregar -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Servicio:" />

            <LinearLayout
                android:id="@+id/contenedorSelectores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                style="@style/BotonAgregar"
                android:layout_marginTop="6dp">

                <Button
                    android:id="@+id/btnAgregarServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="@color/bMain"
                    android:text="Agregar Servicio"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Lista de servicios agregados
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Servicios agregados:"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerServiciosAgregados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />
                -->
            <!-- Total -->
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="end"
                style="@style/Texto1"
                android:text="Total: $0.00"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <!-- Guardar Orden -->
            <Button
                android:id="@+id/btnConsultarTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                style="@style/BotonConsultar"
                android:text="Consultar total"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
    <!-- Botón guardar (abajo a la derecha) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="1dp">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/regresarOrdenServicio1"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/eliminar"
            android:text="Cancelar"
            android:layout_weight="1"
            style="@style/BotonRegresar"/>
        <Button
            android:id="@+id/btnGuardarOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/guardar"
            android:text="Guardar"
            android:layout_weight="1"
            style="@style/BotonGuardar" />
    </LinearLayout>


</LinearLayout>
