<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agregarTecnico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Barra superior -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bs"
        android:gravity="center"
        android:text="Nuevo Técnico"
        style="@style/Titulo"
        android:textStyle="bold" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:orientation="vertical">

            <!-- Identificación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Identificación:"
                style="@style/Texto1"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/etIdentificacionTec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                style="@style/Texto2"
                android:maxLength="13"
                android:inputType="number" />

            <!-- Nombre -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Nombre:" />

            <EditText
                android:id="@+id/etNombreTec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                style="@style/Texto2"
                android:inputType="textPersonName" />

            <!-- Dirección -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Especialidad:" />

            <EditText
                android:id="@+id/etEspecialidadTec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Texto2"
                android:layout_marginBottom="12dp"
                android:inputType="text" />

            <!-- Teléfono -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto1"
                android:text="Teléfono:" />

            <EditText
                android:id="@+id/etTelefonoTec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:inputType="phone"
                style="@style/Texto2"
                android:maxLength="10"/>

            <!-- Espaciador para que el botón no tape campos en pantallas pequeñas -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Botón guardar (abajo a la derecha) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp">
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/regresarTecnicos"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/eliminar"
            android:text="Cancelar"
            android:layout_weight="1"
            style="@style/BotonRegresar"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btnGuardarTecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/guardar"
            android:text="Guardar"
            android:layout_weight="1"
            style="@style/BotonGuardar"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
