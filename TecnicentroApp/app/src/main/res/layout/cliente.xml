<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/pantallaCliente"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Listado de Clientes"
        android:background="@color/bs"
        android:textColor="@color/white"
        style="@style/Titulo"
        android:layout_marginBottom="12dp"/>

    <!-- Botón agregar cliente -->
    <Button
        android:id="@+id/btnAgregarCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Cliente"
        android:layout_gravity="center_horizontal"
        style="@style/BotonAgregar"
        android:layout_marginBottom="16dp"/>

    <!-- Lista de clientes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerClientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false" />
</LinearLayout>