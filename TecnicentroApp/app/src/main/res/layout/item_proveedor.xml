<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemTecnico"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="12dp"
    android:backgroundTint="#FFFFFF"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvIdentificacionP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Identificación: 001"
            android:textColor="@color/bs"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/Texto1"
                android:text="Nombre del proveedor: " />

            <TextView
                android:id="@+id/tvNombreP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto2"
                android:text="Carlos Pérez"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/Texto1"
                android:text="Teléfono: " />
            <TextView
                android:id="@+id/tvTelefonoP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto2"
                android:text="555-555" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                style="@style/Texto1"
                android:text="Descripción: " />
            <TextView
                android:id="@+id/tvDescripcionP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Texto2"
                android:text="Suministro de repuestos y accesorios para vehiculos" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEliminarP"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/eliminar"
            android:text="Eliminar"
            style="@style/BotonRegresar"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>