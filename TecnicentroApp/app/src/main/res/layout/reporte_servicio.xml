<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reportexServicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Encabezado -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bs"
        android:gravity="center"
        android:text="Reporte por Servicio"
        style="@style/Titulo"
        android:textStyle="bold" />

    <!-- Contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Filtros -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        style="@style/Texto1"
                        android:textColor="@color/black"
                        android:text="AÃ±o:" />

                    <EditText
                        android:id="@+id/etAnioS"
                        android:layout_width="120dp"
                        android:layout_height="36dp"
                        style="@style/Texto2"
                        android:maxLength="4"
                        android:background="@android:drawable/edit_text"
                        android:inputType="number"
                        android:paddingHorizontal="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/black"
                        style="@style/Texto1"
                        android:text="Mes:" />

                    <Spinner
                        android:id="@+id/spMesS"
                        android:layout_width="180dp"
                        android:layout_height="36dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnConsultarServicio"
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    style="@style/BotonAgregar"
                    android:text="Consultar"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <!-- Cabecera tipo tabla -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/bs"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Servicio"
                    style="@style/Texto1Tabla"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    style="@style/Texto1Tabla"
                    android:text="Total recaudado"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Lista -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReporteServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
